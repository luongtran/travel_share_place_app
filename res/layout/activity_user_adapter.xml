<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     tools:context=".MatchingActivity" 
    android:layout_width="match_parent"
   	android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    >
    
    <ImageButton
        android:id="@+id/btn_setting_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_setting"
		android:layout_gravity="right"
        />
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    
    >
	    <ImageView 
	        android:id="@+id/img_avarta_user_activity"
        	android:background="@drawable/avar1"
        	android:layout_width="30dip"
            android:layout_height="30dip"
            
	        />
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:layout_marginLeft="2dip"
	        >
	        
		      <TextView
		        android:id="@+id/tv_name_user_activity"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="10dip"
		        android:text="UserName"
		        android:textStyle="bold"
		        />
		      
	         <TextView
		        android:id="@+id/tv_time_activity"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="time"
		        android:textSize="7dip"
	        />
	    </LinearLayout>
	    
	    
	</LinearLayout>
	<View
	  android:layout_width="fill_parent"
	  android:layout_height="1dp"       
	  android:background="#a1a0a2" />
	<TextView 
	    android:id="@+id/tv_content_activity"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12dip"
	    android:text="activity"
	    />
	<View
	  android:layout_width="fill_parent"
	  android:layout_height="1dp"       
	  android:background="#a1a0a2" />
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    
	    >
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center_horizontal"
	        >
	         
	        <ImageButton 
		        android:id="@+id/btn_comment_activity"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/ic_comment_status"
		        android:layout_margin="5dip"
	        />
	        <TextView
	            android:id="@+id/tv_numcomment_activity"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0"
	            android:textSize="8dip"
		        android:textColor="#134812"
		        android:textStyle="italic"
	            />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center_horizontal"
	        >
	        <ImageButton 
		        android:id="@+id/btn_like_activity"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/ic_like"
		        android:layout_margin="5dip"
	        />
		     <TextView
		         android:id="@+id/tv_numlike_activity"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:text="0"
		         android:textSize="8dip"
		         android:textColor="#134812"
		         android:textStyle="italic"
		         />
	    </LinearLayout>
	     
	      
	      
	</LinearLayout>
	
</LinearLayout>