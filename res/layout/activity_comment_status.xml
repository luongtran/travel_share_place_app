<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatchingActivity" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="top"
    android:background="#dcdcdc"
    
    >
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/rounded_bt"
	    android:padding="2dip"
	    
        >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
    >
    
	    <ImageView
	        android:id="@+id/img_cmstatus_avarta"
        	android:background="@drawable/avar1"
        	android:layout_width="40dip"
            android:layout_height="40dip"
            
	        />
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:layout_marginLeft="2dip"
	        >
	        
		      <TextView
		        android:id="@+id/tv_cmstatus_name"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="UserName"
		        android:textStyle="bold"
		        />
		      
	         <TextView
		        android:id="@+id/tv_cmstatus_time"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="time"
		        android:textSize="10dip"
	        />
	    </LinearLayout>
	    
	    
	</LinearLayout>
	<View
	  android:layout_width="fill_parent"
	  android:layout_height="1dp"       
	  android:background="#a1a0a2" />
	<TextView 
	    android:id="@+id/tv_cmstatus_content"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="status"
	   android:layout_margin="3dip"
	    />
	<View
	  android:layout_width="fill_parent"
	  android:layout_height="1dp"       
	  android:background="#a1a0a2" />
	<LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        
	        >
	        <ImageButton 
		        android:id="@+id/btn_cmstatus_like"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/ic_like"
		        android:layout_margin="5dip"
	        />
	        <TextView
	            android:id="@+id/tv_cmstatus_numlike"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0"
	            android:textSize="8dip"
		        android:textColor="#134812"
		        android:textStyle="italic"
		        android:layout_gravity="center"
	            />
	    </LinearLayout>
	</LinearLayout>
	<!-- comment on -->
	 <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#ffffff"
	        android:layout_margin="3dip"
	        android:gravity="center"
	        >
	        
	        <EditText 
	            android:id="@+id/ed_cmstatus_content"
	            android:layout_width="200dip"
	            android:layout_height="50dip"
	            android:hint="@string/hint_ed_cmstatus"
	            android:textSize="10dip"
	            android:lines="5"
	            android:gravity="left"
	            />
	        
	        <ImageButton
	            android:id="@+id/btn_cmstatus_post"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/enter"
	            android:onClick="on_post_comment"
	            />
	        
	    </LinearLayout>
	<ListView
	    android:id="@+id/lv_cmstatus"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:dividerHeight="2dip"
    >
	    
	</ListView>
</LinearLayout>
